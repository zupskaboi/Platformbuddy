@{
    ViewData["Title"] = "Register Page";
}
<form id="addUserForm">
    <label for="nameInput">Naam: </label>
    <input type="text" id="nameInput" name="name"/><br><br>
    <label for="passwordInput">Wachtwoord: </label>
    <input type="password" id="passwordInput" name="password"/><br><br>

    <input type="submit" value="RegisterUser">
</form><br><br>

<a asp-controller="User" asp-action="LoginUser">
        <input type="button" value="Already have an account" />
    </a>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script type="text/javascript">
    $('#addUserForm').submit(e => {
        e.preventDefault();

        let data = {
            name: $('#nameInput').val(),
            password: $('#passwordInput').val()
        }

        let domain = window.location.protocol + "//" + window.location.host + "/";

        $.post(domain + "User/RegisterUser", data)
            .done(() => { window.location.href = domain + "User/LoginUser"} )
            .fail(() => { 
                alert("Account already exists") 
            })
    })
</script>
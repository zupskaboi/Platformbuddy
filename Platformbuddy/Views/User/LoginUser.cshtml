@{
    ViewData["Title"] = "Login Page";
}
<form id="loginUserForm">
    <label for="nameInput">Naam: </label>
    <input type="text" id="nameInput" name="name"/><br><br>
    <label for="passwordInput">Wachtwoord: </label>
    <input type="password" id="passwordInput" name="password"/><br><br>

    <input type="submit" value="LoginUser">
</form><br><br>

<a asp-controller="User" asp-action="RegisterUser">
        <input type="button" value="Don't have an account?" />
    </a>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script type="text/javascript">
    $('#loginUserForm').submit(e => {
        e.preventDefault();

        let data = {
            name: $('#nameInput').val(),
            password: $('#passwordInput').val()
        }

        let domain = window.location.protocol + "//" + window.location.host + "/";

        $.post(domain + "User/LoginUser", data)
            .done(() => { window.location.href = domain + "User/Index"} )
            .fail(() => { 
                alert("Couldn't post credentials") 
            })
    })
</script>